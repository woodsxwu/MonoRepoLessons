{
  "name": "recursive-descent-calculator",
  "version": "1.0.0",
  "description": "A recursive descent calculator with blessed terminal UI",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/main.js",
    "dev": "ts-node main.ts",
    "calculator": "ts-node main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:todo": "jest --config jest.config.todo.js",
    "test:todo:watch": "jest --config jest.config.todo.js --watch",
    "test:todo:coverage": "jest --config jest.config.todo.js --coverage",
    "todo": "ts-node todo_main.ts",
    "todo:build": "tsc && node dist/todo_main.js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "calculator",
    "recursive-descent",
    "parser",
    "blessed",
    "terminal",
    "typescript"
  ],
  "author": "Student",
  "license": "MIT",
  "dependencies": {
    "blessed": "^0.1.81"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.21",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
